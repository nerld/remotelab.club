<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <%= current_user.email %> <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'Update Profile', edit_user_registration_path %></li>
      <% if current_user.admin? %>
        <li class="divider"></li>
        <li><%= link_to 'User Management', users_path %></li>
      <% end %>
      <li class="divider"></li>
      <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'Login', new_user_session_path %></li>
<% end %>

