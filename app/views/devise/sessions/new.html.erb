<div class="col-md-4 col-md-offset-4">
  <div class="form-box sign-in">
    <div class="avatar"></div>
    <h3>Sign in to continue</h3>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :data => {:validate => 'parsley'}}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email Address', :required => true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', :required => true %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      <% end -%>
      <%= f.submit 'Sign in', :class => 'btn btn-primary btn-lg centerize' %>
    <% end %>
  </div>
  <div class="sign-in-options">
    <%- if devise_mapping.registerable? %>
      <%= link_to 'I want to sign up.', new_registration_path(resource_name), class: 'right', tabindex: '-1' %>
    <% end -%>
    <br>
    <%- if devise_mapping.recoverable? %>
      <%= link_to "I've forgotten my password.", new_password_path(resource_name), class: 'right', tabindex: '-1' %>
    <% end -%>
  </div>
</div>
