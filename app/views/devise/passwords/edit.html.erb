<div class="col-md-4 col-md-offset-4 form-box text-center">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :data => {:validate => 'parsley'}}) do |f| %>
    <h3>Change your password</h3>
    <% resource.errors.full_messages.each do |msg| %>
      <li class="form-error"><%= msg %></li>
    <% end %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'New Password', :required => true, "data-parsley-minlength" => 8 %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm new password', :required => true, "data-parsley-equalto" => '#user_password', "data-parsley-minlength" => 8, "data-parsley-equalto-message" => 'Passwords do not match!' %>
    </div>
     <%= f.submit 'Change my Password', :class => 'btn btn-primary centerize' %>
  <% end %>
</div>
